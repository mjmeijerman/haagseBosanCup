{% extends 'admin/base.html.twig' %}

{% block body %}
    {% if wijzigenTurnsterToegestaan %}
        <div id="inschrijven">
            <a href="{{ path('addTurnster') }}">Turnster toevoegen &#187;</a>
        </div>
    {% endif %}
    {% if wijzigJuryToegestaan %}
        <div id="add_jury">
            <a href="{{ path('addJury') }}">Jurylid toevoegen &#187;</a>
        </div>
    {% endif %}





    <h1>Uw gegevens</h1>
    {#<i>Wil je gegevens bewerken? Dat is heel simpel, je hoeft er alleen maar op te klikken!</i>#}

    <h4>&#187; Vereniging</h4>
    <table class="controle_tabel">
        <tr>
            <td>
                {{ contactgegevens.vereniging }}
            </td>
        </tr>
    </table>

    <h4>&#187; Contactpersoon</h4>
    <table class="aanpas_tabel">
        <tr>
            <td>Gebruikersnaam:</td>
            <td>{{ contactgegevens.gebruikersnaam }}</td>
        </tr>
        <tr>
            <td>Voornaam:</td>
            <td>{{ contactgegevens.voornaam }}</td>
        </tr>
        <tr>
            <td>Achternaam:</td>
            <td>{{ contactgegevens.achternaam }}</td>
        </tr>
        <tr>
            <td>E-mailadres:</td>
            <td>{{ contactgegevens.email }}</td>
        </tr>
        <tr>
            <td>Wachtwoord:</td>
            <td>Wijzigen</td>
        </tr>
    </table>

    {#<a href="#" id="factuur">&#187; Factuur downloaden</a>#}
    {#<a href="#" id="indeling">&#187; Wedstrijdindeling downloaden</a>#}

    <h4>&#187; Deelnemers ({{ turnsters|length }})</h4>
    <table id="deelnemers">

        <tr>
            <th width="20">
                #
            </th>
            <th>
                Voornaam
            </th>
            <th>
                Achternaam
            </th>
            <th>
                Geb. jaar
            </th>
            <th>
                Cat.
            </th>
            <th>
                Niv.
            </th>
            <th>
                Nr.
            </th>
            <th>

            </th>
            <th>

            </th>
        </tr>
        {% for turnster in turnsters %}
            <tr title="{{ turnster.opmerking }}">
                <td>
                    {{ loop.index }}
                </td>
                <td>
                    {{ turnster.voornaam }}
                </td>
                <td>
                    {{ turnster.achternaam }}
                </td>
                <td>
                    {{ turnster.geboorteJaar }}
                </td>
                <td>
                    {{ turnster.categorie }}
                </td>
                <td>
                    {{ turnster.niveau }}
                </td>
                <td>
                    {{ turnster.wedstrijdnummer }}
                </td>
                <td>
                    {% if uploadenVloermuziekToegestaan %}
                        <img src="{{ asset('images/refresh.png') }}" height="18">
                        <img src="{{ asset('images/upload.png') }}" height="18">
                    {% endif %}
                    {% if turnster.vloermuziek %}
                        <img src="{{ asset('images/listen.png') }}" height="18">
                    {% endif %}
                </td>
                <td>
                    {% if wijzigenTurnsterToegestaan %}
                        <img src="{{ asset('images/edit.png') }}">
                    {% endif %}
                    {% if verwijderenTurnsterToegestaan %}
                        <form method="post" name="remove_turnster_{{ turnster.id }}"
                              action="{{ path('removeTurnster') }}" style="display: inline;">
                            <div class="fake_link" onclick="remove_turnster('{{ turnster.id }}',
                                    '{{ turnster.voornaam }}', '{{ turnster.achternaam }}')" style="display: inline">
                                <img src="{{ asset('images/remove.png') }}" width="15"/>
                                <input type="hidden" name="turnsterId" value="{{ turnster.id }}"/>
                            </div>
                        </form>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
    </table>
    <br/>
    <table>
        <tr>
            {% if uploadenVloermuziekToegestaan %}
                <td><img src="{{ asset('images/upload.png') }}" height="18"></td>
                <td>Muziek uploaden</td>
            {% endif %}
            {% if wijzigenTurnsterToegestaan %}
                <td><img src="{{ asset('images/edit.png') }}"></td>
                <td>Inschrijving bewerken</td>
            {% endif %}
        </tr>
        <tr>
            {% if uploadenVloermuziekToegestaan %}
                <td><img src="{{ asset('images/listen.png') }}" height="18"></td>
                <td>Muziek beluisteren</td>
            {% endif %}
            {% if verwijderenTurnsterToegestaan %}
                <td><img src="{{ asset('images/remove.png') }}" width="15"/></td>
                <td>Turnster afmelden</td>
            {% endif %}
        </tr>
        <tr>
            {% if uploadenVloermuziekToegestaan %}
                <td><img src="{{ asset('images/refresh.png') }}" width="15"/></td>
                <td>Muziek opnieuw uploaden</td>
            {% endif %}
        </tr>
    </table>


    <h4>&#187; Wachtlijst ({{ wachtlijstTurnsters|length }})</h4>
    <table id="wachtlijst">
        <tr>
            <th width="20">
                #
            </th>
            <th>
                Voornaam
            </th>
            <th>
                Achternaam
            </th>
            <th>
                Geb. jaar
            </th>
            <th>
                Cat.
            </th>
            <th>
                Niv.
            </th>
            <th>

            </th>
        </tr>
        {% for wachtlijst in wachtlijstTurnsters %}
            <tr title="{{ wachtlijst.opmerking }}">
                <td>
                    {{ loop.index }}
                </td>
                <td>
                    {{ wachtlijst.voornaam }}
                </td>
                <td>
                    {{ wachtlijst.achternaam }}
                </td>
                <td>
                    {{ wachtlijst.geboorteJaar }}
                </td>
                <td>
                    {{ wachtlijst.categorie }}
                </td>
                <td>
                    {{ wachtlijst.niveau }}
                </td>
                <td>
                    {% if wijzigenTurnsterToegestaan %}
                        <img src="{{ asset('images/edit.png') }}">
                    {% endif %}
                    {% if verwijderenTurnsterToegestaan %}
                        <form method="post" name="remove_turnster_{{ wachtlijst.id }}"
                              action="{{ path('removeTurnster') }}" style="display: inline;">
                            <div class="fake_link" onclick="remove_turnster('{{ wachtlijst.id }}',
                                    '{{ wachtlijst.voornaam }}', '{{ wachtlijst.achternaam }}')"
                                 style="display: inline">
                                <img src="{{ asset('images/remove.png') }}" width="15"/>
                                <input type="hidden" name="turnsterId" value="{{ wachtlijst.id }}"/>
                            </div>
                        </form>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
    </table>
    <br/>
    <table>
        <tr>
            {% if wijzigenTurnsterToegestaan %}
                <td><img src="{{ asset('images/edit.png') }}"></td>
                <td>Inschrijving bewerken</td>
            {% endif %}
        </tr>
        <tr>
            {% if verwijderenTurnsterToegestaan %}
                <td><img src="{{ asset('images/remove.png') }}" width="15"/></td>
                <td>Turnster afmelden</td>
            {% endif %}
        </tr>
    </table>

    <h4>&#187; Juryleden ({{ juryleden|length }})</h4>
    <table id="juryleden">
        <tr>
            <th width="20">
                #
            </th>
            <th>
                Voornaam
            </th>
            <th>
                Achternaam
            </th>
            <th>
                Opmerking
            </th>
            <th>
