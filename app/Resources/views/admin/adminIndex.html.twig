{% block body %}
    <h1>Inloggen</h1>
    <i>Ingelogd als Admin</i>

    <hr>
    <h2>Foto's
        <a href="{{ path('addAdminFoto') }}">
            <img src="{{ asset('images/add.png') }}" width="18px"/>
        </a></h2>
    <table id="uploads" border="1">
        <col width="30%"/>
        <col width="66.5%"/>
        <col width="3.5%"/>
        <tr>
            <th>Naam</th>
            <th>Locatie</th>
            <th></th>
        </tr>
        {% for foto in fotoUploads %}
            <tr>
                <td>{{ foto.naam }}</td>
                <td>http://www.haagsebosancup.nl/uploads/adminFotos/{{ foto.locatie }}</td>
                <td><a href="{{ path('removeAdminFoto', { 'id': foto.id }) }}">
                        <img src="{{ asset('images/remove.png') }}" width="18px"/>
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>

    <h2>Overige bestanden
        <a href="{{ path('addAdminFile') }}">
            <img src="{{ asset('images/add.png') }}" width="18px"/>
        </a></h2>
    <table id="uploads" border="1">
        <col width="30%"/>
        <col width="66.5%"/>
        <col width="3.5%"/>
        <tr>
            <th>Naam</th>
            <th>Locatie</th>
            <th></th>
        </tr>
        {% for file in fileUploads %}
            <tr>
                <td>{{ file.naam }}</td>
                <td>http://www.haagsebosancup.nl/uploads/adminFiles/{{ file.locatie }}</td>
                <td><a href="{{ path('removeAdminFile', { 'id': file.id }) }}">
                        <img src="{{ asset('images/remove.png') }}" width="18px"/>
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}