<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Haagse Bosan Cup</title>
    <meta charset="UTF-8" />
    {% block stylesheets %}
        <link href="{{ asset('css/main.css') }}" rel="stylesheet"/>
    {% endblock %}
    <link rel="shortcut icon" type="image/png" href="{{ asset('images/favicon.png') }}"/>
</head>
<body>
<center>
    <div id="error_container"></div>
    <div id="error_success_container"></div>
    <div id="container">
        <div id="header">
            <a href="{{ path('getIndexPage') }}">
                <img src="{{ asset('images/header.png') }}" alt="" />
            </a>
        </div>

        <div id="fill">.</div>
        <nav id="primary_nav_wrap">
            <ul>
                {% for menuItem in menuItems %}
                    <li>
                        {% if menuItem.submenuItems %}
                            <a href="#">{{ menuItem.naam }}</a>
                            <ul>
                                {% for submenuItem in menuItem.submenuItems %}
                                    <li {% if loop.index == menuItem.submenuItems|length %}id="last"{% endif %}>
                                        <a href="{{ path('getContent', { 'page': submenuItem.naam }) }}">{{ submenuItem.naam }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <a href="{{ path('getContent', { 'page': menuItem.naam }) }}">{{ menuItem.naam }}</a>
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
        </nav>

        <div id="l">
            <div class="locatie">
                <h2>Locatie</h2>
                <hr>
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d2451.4535801027096!2d4.3465653!3d52.08967620000001!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c5b70ac9816991%3A0x8f5cdf0ea9d78ec8!2sVlaskamp+3%2C+2592+AA+Den+Haag!5e0!3m2!1snl!2snl!4v1420389570598"
                        width="200" frameborder="0"
                        style="border:0;margin-left:10px;margin-right:10px;margin-bottom:5px;"></iframe>
                <br/>
                Sporthal Overbosch<br/>
                Vlaskamp 3, Den Haag
            </div>
        </div>

        <div id="c">
            <div class="content">
                {% block body %}{% endblock %}
            </div>
        </div>

        <div id="s">
            <div class="sponsor">
                Sponsors
                <hr />
                {% for sponsor in sponsors %}
                {% if sponsor.website %}
                    <a href="{{ sponsor.website }}" target="_blank" style="text-decoration: none;">
                {% endif %}
                    <img src="http://www.haagsebosancup.nl/uploads/sponsors/{{ sponsor.locatie }}" />
                {% if sponsor.website %}
                    </a>
                {% endif %}
                <br />
                    {% if loop.index != sponsors|length %}<br />{% endif %}
                {% endfor %}
            </div>
        </div>
        <div id="social">
            <a href="https://www.facebook.com/haagsebosancup" target="_blank"><img src="{{ asset('images/facebook.png') }}" width="30" /></a>
        </div>

        {% block javascripts %}

        {% endblock %}
    </div>
</center>
</body>
</html>